{
  "name": "@wry/task",
  "version": "0.3.3",
  "author": "Ben Newman <ben@eloper.dev>",
  "description": "Promise-compatible asynchronous computation primitive",
  "license": "MIT",
  "type": "module",
  "main": "lib/bundle.cjs",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "Promise",
    "async",
    "asynchronous",
    "task",
    "computation"
  ],
  "homepage": "https://github.com/benjamn/wryware",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benjamn/wryware.git"
  },
  "bugs": {
    "url": "https://github.com/benjamn/wryware/issues"
  },
  "scripts": {
    "build": "npm run clean:before && npm run tsc && npm run rollup && npm run clean:after",
    "clean:before": "../../node_modules/.bin/rimraf lib",
    "tsc": "npm run tsc:es5 && npm run tsc:esm",
    "tsc:es5": "../../node_modules/.bin/tsc -p tsconfig.es5.json",
    "tsc:esm": "../../node_modules/.bin/tsc -p tsconfig.json",
    "rollup": "../../node_modules/.bin/rollup -c rollup.config.js",
    "clean:after": "../../node_modules/.bin/rimraf lib/es5",
    "prepare": "npm run build",
    "test:cjs": "../../scripts/test.sh lib/tests/bundle.cjs",
    "test:esm": "../../scripts/test.sh lib/tests/bundle.js",
    "test": "npm run test:esm && npm run test:cjs"
  },
  "dependencies": {
    "@wry/context": "*",
    "tslib": "^2.3.0"
  },
  "engines": {
    "node": ">=8"
  }
}
